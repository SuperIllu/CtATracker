<UserControl x:Class="CtATracker.UI_element_prefabs.TimerWindowEntry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CtATracker.UI_element_prefabs"
      mc:Ignorable="d" 
      d:DesignHeight="25" d:DesignWidth="200">

    <Grid Height="16">
        <ProgressBar x:Name="SkillTime_bar" Minimum="0" Maximum="100" Value="12"
                             Background="Transparent" Foreground="LightBlue"
                             IsIndeterminate="False" Margin="1"/>
        <TextBlock x:Name="SkillTime_text" Text="[Skill] - 00:00" 
                           VerticalAlignment="Top" HorizontalAlignment="Center"
                           FontWeight="DemiBold" Foreground="Black" FontSize="12"/>
    </Grid>
</UserControl>
