<UserControl x:Class="CtATracker.SynergySkill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="32" MinWidth="300">
    <StackPanel Orientation="Horizontal" Margin="0 0 0 2">
        <TextBlock x:Name="SkillNameBlock" Text="Skill Name" FontWeight="Bold" Margin="5 0 5 0" Width="160" VerticalAlignment="Center"/>
        <TextBox x:Name="SkillLevelBox" Width="35" Text="Lvl" TextAlignment="Center" Margin="0 0 4 0" VerticalContentAlignment="Center"/>
    </StackPanel>
</UserControl>