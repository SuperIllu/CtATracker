<Window x:Class="CtATracker.NewSkillInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new skill" Height="160" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <!-- ComboBox with dropdown items -->
        <ComboBox x:Name="ComboBoxItems" Height="25" Margin="0,0,0,10" />

        <!-- Small TextBox -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock Text="(Total) Skill level:" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <TextBox x:Name="InputTextBox" Height="25" Margin="0 0 10 0" Width="50"/>
            <Button x:Name="KeyButton" Content="Key:--" Height="25" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Button "Key:" -->
        

        <!-- Add / Cancel buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="AddButton" Content="Add" Width="75" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
