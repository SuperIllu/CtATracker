<Window x:Class="CtATracker.SummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Width="200" Height="80"
        >

    <Border Background="#DDFFFFFF" CornerRadius="2" Padding="2" BorderBrush="Gray" BorderThickness="1">
        
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Background="DarkGray">
                <Ellipse x:Name="StateDot" Width="10" Height="10" Margin="6,0,6,0" Fill="Red"/>
                <TextBlock x:Name="StateText" FontWeight="Bold" Foreground="White" FontSize="13" Text="Waiting for lvls"/>
            </StackPanel>

            <!-- First Field -->
            <Grid Height="30">
                <ProgressBar x:Name="Bar_BattleCommand" Minimum="0" Maximum="100" Value="50"
                             Background="Transparent" Foreground="LightGreen"
                             IsIndeterminate="False"/>
                <TextBlock x:Name="Text_BattleCommand" Text="Battle command - 00:00" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" Foreground="Black" FontSize="14"/>
            </Grid>

            <!-- Second Field -->
            <Grid Height="30">
                <ProgressBar x:Name="Bar_BattleOrders" Minimum="0" Maximum="100" Value="75"
                             Background="Transparent" Foreground="LightBlue"
                             IsIndeterminate="False"/>
                <TextBlock x:Name="Text_BattleOrders" Text="Battle orders - 00:00" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" Foreground="Black" FontSize="14"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
