<UserControl x:Class="CtATracker.window_elements.SynergyListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel>
        <Label Content="Synergies (hard points)" FontWeight="Bold" Margin="5 0" FontSize="10"/>
        <StackPanel x:Name="SynergyPanel">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 2">
                <TextBlock Text="[Synergy skill]" FontWeight="Bold" Margin="5 0 5 0" Width="160" FontSize="12"/>
                <TextBox x:Name="SynergySkill_1" Width="35" Text="Lvl" TextAlignment="Center" Margin="0 0 4 0"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>